type {{camel $typename}} struct {
{{- range $idx, $put_required := $.RequiredOrder}}
{{- range $field_name, $field_desc := $desc.Fields}}
	{{- $type := get_type $field_name $typename $field_desc.Types }}

	{{- if eq $field_desc.Required $put_required}}
